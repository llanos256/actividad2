<p id="notice"><%= notice %></p>

<h1>Prestamos</h1>

<table class="table table-striped">
  <thead>
    <tr class="table-primary">
      <th>Fecha</th>
      <th>Usuario</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prestamos.each do |prestamo| %>
      <tr>
        <td><%= prestamo.fecha %></td>
        <td><%= prestamo.Usuario.nombres + " "+ prestamo.Usuario.apellidos %></td>
        <td><%= prestamo.estado %></td>
        <td><%= link_to 'Show', prestamo %></td>
        <td><%= link_to 'Edit', edit_prestamo_path(prestamo) %></td>
        <td><%= link_to 'Destroy', prestamo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

